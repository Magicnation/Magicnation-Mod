package com.juanwan11_magicnation.structures;

import net.minecraft.block.Block;
import net.minecraft.world.World;

public class WorldGenPyramidStructure {

	public static void pyramid(World world,int posx,int posy,int posz,Block blockType, int size){
		
		int j,k,i,temp,tempx=posx,tempy=posy,tempz=posz;

		temp = 2*size-1;
				
		for(i=temp;i>0;i--){
			for(j=0;j<tempx;j++)
				for(k=0;k<tempz;k++)
					world.setBlock(tempx, tempy, tempz, blockType);
		
		}
	}
	
	
	
}
