package com.juanwan11_magicnation.structures;

import net.minecraft.block.Block;
import net.minecraft.world.World;

public class WorldGenPyramidStructure {

	public static void pyramid(World world,int posx,int posy,int posz,Block blockType, int size){
		
		int j,k;
		
		for(k = 0;k<size;k++)
			for(j = 0;j<size;j++){
				world.setBlock(posx + j, posy, posz, blockType);
			
		}
		
	}
	
	
	
}
